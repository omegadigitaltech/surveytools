# Database configuration
DB_URI=mongodb://localhost:27017/your_database_name

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Paystack Keys
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Google Gemini API Key
# Get your API key from https://ai.google.dev/
# Required for the questionnaire document upload feature
# NOTE: Make sure to enable the 'fileManager.files' scope for your API key
# so it can process document files properly
GEMINI_API_KEY=your_gemini_api_key

# Database security key
DB_KEY=your_db_key

# Redis Configuration
# Redis URL format: redis://username:password@host:port
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# For Docker Compose, use "redis" as the hostname.
# For local development without Docker, use "localhost" or "127.0.0.1"

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173 